<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %> image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <!-- The dash instead of replacing the content directly it evaluates it as html first -->
                <!-- This allows formatting but does not protect from script injection -->
                <p><%- blog.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete_form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <input class="ui red basic button" type="submit" value="Delete">
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>