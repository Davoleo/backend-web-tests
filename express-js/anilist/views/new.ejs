<%- include("partials/header")%>

<div class="container text-center">
    <h1 class="mb-4">Add a new Anime to the list</h1>

    <div style="width: 40%; margin: 0 auto">
        <form action="/anilist" method="post">
            <div class="form-group"><input class="form-control" type="text" placeholder="Name" name="name"></div>
            <div class="form-group"><input class="form-control" type="text" placeholder="Image URL" name="image"></div>
            <div class="form-group"><input class="form-control" type="text" placeholder="Description" name="description"></div>
            <div class="form-group"><input class="btn btn-lg btn-primary btn-block" type="submit"></div>
        </form>
    </div>

    <div class="mt-5">
        <a href="/anilist">Back</a>
    </div>
</div>

<%- include("partials/footer")%>