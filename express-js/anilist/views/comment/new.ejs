<%- include("../partials/header")%>

<div class="container text-center">
 <h1 class="mb-4">Add a new Comment to <%= anime.name %></h1>

 <div style="width: 40%; margin: 0 auto">
  <form action="/anilist/<%= anime._id %>/comments" method="post">
   <div class="form-group"><input class="form-control" type="text" placeholder="Text" name="comment[text]"></div>
   <div class="form-group"><input class="form-control" type="text" placeholder="Author" name="comment[author]"></div>
   <div class="form-group"><input class="btn btn-lg btn-primary btn-block" type="submit"></div>
  </form>
 </div>

 <div class="mt-5">
  <a href="/anilist/<%= anime._id %>">Back</a>
 </div>
</div>

<%- include("../partials/footer")%>